#!/usr/bin/env python2.7
import sys, os

def main():
    with open(sys.argv[1], 'r') as f:
        _ = f.next() #ignore first line
        with open(sys.argv[2], 'w') as outf:
            for line in f:
                acc, prob, info, chrom, chromStart, chromStop = line.rstrip().split("\t")
                if info:
                    outf.write("\t".join([chrom, chromStart, chromStop, "/".join([prob, info, acc])]) + '\n')
                else:
                    outf.write("\t".join([chrom, chromStart, chromStop, "/".join([prob, acc])]) + '\n')

if __name__ == "__main__":
    main()
